<Window x:Class="TailorMadeTours.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TailorMadeTours"
        mc:Ignorable="d"
        Title="Tailor-made Tours" Height="700" Width="800" WindowState="Maximized" FontSize="18">
    <Grid>
        <StackPanel >
            <TextBlock TextWrapping="Wrap" Text="Tailor-made Tours - Chicago" FontSize="24" FontWeight="Bold"/>
            <TabControl x:Name="tabControl" MinHeight="680">
                <TabItem Header="Tour Stops">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Details">
                    
                </TabItem>
                <TabItem Header="Weekly Calender">
                    <Grid Background="Orange"/>
                </TabItem>
            </TabControl>

        </StackPanel>
    </Grid>
</Window>
